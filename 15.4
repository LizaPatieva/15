#include <iostream> //Подключение библиотеки iostream
using namespace std;
int quarter (float x, float y) //Функция определения координатной четверти
{
  if ((x>0)&&(y>0))
   {return 1;}
  if ((x<0)&&(y>0))
   {return 2;}
  if ((x<0)&&(y<0))
   {return 3;}
  if ((x>0)&&(y<0))
   {return 4;}
}
  int main (void) //Точка входа в программу
{
  int i ; //Задаем переменную i
  for (i=1; i<=3; ++i) //Цикл для определения номера координатой четверти для трех точек
{
  float x, y; //Объявляем переменные x и y
  printf ("X:"); //Выводим на экран 
  scanf ("%f", &x); //Вводим значение x
  printf ("Y:"); //Выводим на экран 
  printf ("Quarter:%i\n", quarter (x, y)); //Вывод результата на экран
}
return 0; //Возврат целочисленного значения перед завершением функции
}
