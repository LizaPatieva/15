#include <iostream> //Подключение библиотеки iostream
using namespace std;
float rings(float r1, float r2) //Функция, высчитывающая площадь кольца
{
  return 3.14*(r1*r1-r2*r2); 
}
  int main (void) //Точка входа в программу
{
  int i;
  for (i=1; i<=3; ++i) // цикл для расчета площади колец
{
  float r1, r2; //объявляем переменные
  printf ("R1:"); //Выводим на экран 
  scanf ("%f", &r1); //Вводим значение первого радиуса
  printf ("R2:"); //Выводим на экран 
  scanf ("%f", &r2); //Вводим значение второго радиуса
  printf ("S:%f/n", rings (r1, r2)); //Вывод результата
}
return 0; //Возврат целочисленного значения перед завершением функции
}
